<div id="signup" class="modal hide fade" tabindex="-1" data-width="400">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Register</h3>
  </div>
  <div class="modal-body">
    <div class="row-fluid">
      <center>
        <div class="span6">
          <center>
            <div style="text-align:left;">
              <input type="text" size="40" placeholder="Full name" id="rfullname" required><br />
              <hr/>
              <input type="text" size="40" placeholder="Type your email" id="remail" required><br />
              <input type="password" size="40" placeholder="Type your password" id="rpassword" required><br />
            </div>
          </center>
        </div>
      </center>
    </div>
  </div>
  <div class="modal-footer">
    <div class="loadinggif">
    </div>
    <input type="button" class="redbut" value="Register" id="rsubmit">
  </div>
</div>