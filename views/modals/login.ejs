    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Login</h3>
  </div>
  <div class="modal-body">
    <div class="row-fluid">
      <center>
        <div class="span6">
          <center>
            <div style="text-align:left;">
              <input type="text" size="40" placeholder="Type your email" id="lemail"><br />
              <input type="password" size="40" placeholder="Type your password" id="lpassword"><br />
            </div>
          </center>
        </div>
      </center>
    </div>
  </div>
  <div class="modal-footer">
    <input type="button" class="redbut" value="Login" id="lsubmit">
  </div>
</div>